<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hostel.list">
      <field name="name">Hostel list</field>
      <field name="model">hostel.hostel</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="capacity"/>
          <field name="safe_capacity"/>
            <field name="description"/>
        </tree>
      </field>
    </record>

        !-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hostel.action_window">
      <field name="name">All Hostels</field>
      <field name="res_model">hostel.hostel</field>
      <field name="view_mode">tree,form</field>
    </record>

         <!-- Top menu item -->

    <menuitem name="Hostel Management" id="hostel.menu_root"/>

         <!-- menu categories -->

    <menuitem name="Students" id="hostel.menu_1" parent="hostel.menu_root"/>

         <!-- actions -->

    <menuitem name="Undergraduates" id="hostel.menu_1_list" parent="hostel.menu_1"
              action="hostel.action_window"/>


    </data>
</odoo>